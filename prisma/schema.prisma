model Album {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  title        String
  description  String
  shortcuts    Shortcut[]
  collection   Collection? @relation(fields: [collectionId], references: [id])
  collectionId Int?
}

model Collection {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  title     String
  image     String
  shortcuts Shortcut[]
  albums    Album[]
}
